{
  "name": "hire-wire",
  "version": "1.0.0",
  "type": "module",
  "description": "**Hire-wire** is a web application designed to help job seekers generate personalized resumes and cover letters tailored to specific job postings using an LLM (Large Language Model). This project uses React for the frontend, Node.js with Express for the backend, and MySQL for data storage, hosted on Google Cloud.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "lint": "eslint ./server",
    "lint:fix": "eslint --fix ./server",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hire-Wire/hire-wire.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Hire-Wire/hire-wire/issues"
  },
  "homepage": "https://github.com/Hire-Wire/hire-wire#readme",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.11.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "sequelize": "^6.37.4",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.8",
    "@babel/preset-env": "^7.25.8",
    "@eslint/js": "^9.12.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.12.0",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "supertest": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "testEnvironment": "node"
  }
}
